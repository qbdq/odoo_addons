<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_calendar_event_form_inheritt_cabinet" model="ir.ui.view">
            <field name="name">calendar.event.inheritt.cabinet</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='start']" position="before">
                    <field name="type" context="{'default_type':'Control'}"/>
                </xpath>

                <!--           Disable notebook pages              -->
                <xpath expr="//notebook//page[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//notebook//page[3]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!--           Disable Send SMS / Email button         -->
                <!--                <xpath expr="//div[@name='send_buttons']" position="attributes">-->
                <!--                    <attribute name="invisible">1</attribute>-->
                <!--                </xpath>-->


                <!--           Disable Video call location         -->
                <!--                <xpath expr="//field[@name='videocall_location']" position="attributes">-->
                <!--                    <attribute name="invisible">1</attribute>-->
                <!--                </xpath>-->

                <!--                           Disable Send location         -->
                <xpath expr="//field[@name='location']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="string">Doctor</attribute>
                </xpath>

                <xpath expr="//field[@name='categ_ids']" position="after">
                    <field name="appointments_id">file</field>
                </xpath>
            </field>
        </record>


    </data>
</odoo>